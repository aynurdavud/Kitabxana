@model About
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About</h4>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>İd</th>
                            <th>Şəkil</th>
                            <th>Başlıq</th>
                            <th>Mətn</th>
                            <th>Link</th>
                           
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>


                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Image</td>
                            <td>
                                @Model.Title
                            </td>
                            <td>
                                @Model.Description
                            </td>
                            <td>@Model.Link</td>
                           
                            <td>
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary">Update</a>

                            </td>

                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
