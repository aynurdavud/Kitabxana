@model List<Book>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Books</h4>
            <a asp-action="Create"  class="btn btn-secondary">Create</a>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>İd</th>
                            <th>Şəkil</th>
                            <th>Başlıq</th>
                            <th>Mətn</th>

                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Book item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Image</td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Description
                                </td>

                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Update</a>

                                </td>

                            </tr>
                        }



                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

