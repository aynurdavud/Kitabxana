@model Home
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Home</h4>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>İd</th>
                            <th>Şəkil1</th>
                            <th>Başlıq1</th>
                            <th>Mətn1</th>
                            <th>Şəkil2</th>
                            <th>Başlıq2</th>
                            <th>Mətn2</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        
                        
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Image1</td>
                            <td>
                                @Model.Title1
                            </td>
                            <td>
                                @Model.Description1
                            </td>
                            <td>@Model.Image2</td>
                            <td>
                                @Model.Title2
                            </td>
                            <td>
                                @Model.Description2
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary">Update</a>

                            </td>

                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
